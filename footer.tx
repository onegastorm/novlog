document.addEventListener("DOMContentLoaded", function(event){
  Responsivook.start(".nehan-vert-dangumi", {
    theme:"dangumi",
    flow:"tb-rl",
    fontSize:14,
    fontFamily:"MS Mincho",
    height:600,
    // その他のスタイル
