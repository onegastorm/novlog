<!-- ふえぇ、戻るブタンだよぉ！ -->
<div id="return-top">
  <a id="return-top-btn"><i class="fa fa-angle-double-up"></i></a>
</div>

<script>
  $(window).scroll(function(){
    var now = $(window).scrollTop();
//    if(now > 0){
//      $("#return-top").fadeIn("slow");
//    }else{
//      $("#return-top").fadeOut("slow");
//    }
  });
  $("#return-top-btn").click(function(){
    $("html,body").animate({scrollTop:0},"slow");
  });
</script>

<!-- ふえぇ、進むブタンだよぉ！ -->
<div id="return-bottom">
    <a id="return-bottom-btn"><i class="fa fa-angle-double-down"></i></a>
</div>

<script type="text/javascript">
$(function(){
    $("#return-bottom-btn").click(function(){
        $('body').animate({scrollTop: $(document).height()},"slow");
//      $('body').animate({scrollTop: $(document).height()},1500);
        return false;
    });
});
</script>
